<Window x:Class="PostWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="661.941" Width="1302.612" WindowState="Normal" WindowStyle="ThreeDBorderWindow"
        ResizeMode="CanMinimize">
    <Grid>

        <Menu IsMainMenu="True" HorizontalAlignment="Left" Margin="0,0,0,610" Width="1297"   >
            <MenuItem Header="File" Height="22" Width="34">
                <MenuItem x:Name="menuResresh" Header="Resresh" Click ="menuResresh_OnClick">

                </MenuItem>

                <MenuItem x:Name="menuChangeAPIkey" Header="Change API key" Click="menuChangeAPIkey_OnClick">

                </MenuItem>
                <Separator />

                <MenuItem x:Name="menuExit"  Header="Exit" Click="menuExit_OnClick">

                </MenuItem>
            </MenuItem>


        </Menu>

        <DatePicker x:Name="DatePickerLeft"  HorizontalAlignment="Left" Margin="21,76,0,0" VerticalAlignment="Top" Width="136"/>
        <Button x:Name="btn_selectDataOK" Content="OK" HorizontalAlignment="Left" Margin="243,117,0,0" VerticalAlignment="Top" Width="75" Click="Btn_selectDataOK_OnClick"/>
        <Label Content="From" HorizontalAlignment="Left" Margin="21,53,0,0" VerticalAlignment="Top"/>
        <Label Content="To" HorizontalAlignment="Left" Margin="182,53,0,0" VerticalAlignment="Top"/>
        <GroupBox Header="Search" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Height="113" Width="317"/>
        <TextBox x:Name="tb_count"  HorizontalAlignment="Left" Height="23" Margin="416,53,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tb_NPcost" HorizontalAlignment="Left" Height="23" Margin="416,81,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tb_Mycost" HorizontalAlignment="Left" Height="23" Margin="416,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <DataGrid Name="DG_doc" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="10,157,0,0" VerticalAlignment="Top" Height="433" Width="1267" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header = "Номер ТТН" Binding="{Binding IntDocNumber}"></DataGridTextColumn>
                <DataGridTextColumn Header = "Дата відправлення" Binding="{Binding DateTime}"></DataGridTextColumn>
                <DataGridTextColumn Header = "Отримувач" Binding="{Binding RecipientDescription}"></DataGridTextColumn>
                <DataGridTextColumn Header = "Телефон отримувача" Binding="{Binding RecipientContactPhone}"></DataGridTextColumn>
                <DataGridTextColumn Header = "Вага" Binding="{Binding Weight}"></DataGridTextColumn>
                <DataGridTextColumn Header ="Оголошена вартість" Binding="{Binding Cost}"></DataGridTextColumn>
                <DataGridTextColumn Header ="Вартість доставки" Binding="{Binding CostOnSite}"></DataGridTextColumn>
                <DataGridTextColumn Header ="Статус"  Binding="{Binding StateName}"></DataGridTextColumn>
            </DataGrid.Columns>

        </DataGrid>
        <Button Name="btn_cancel" Content="Cancel" HorizontalAlignment="Left" Margin="21,117,0,0" VerticalAlignment="Top" Width="75" Click="Btn_cancel_OnClick"/>
        <DatePicker x:Name="DatePickerRight"  HorizontalAlignment="Left" Margin="182,76,0,0" VerticalAlignment="Top" Width="136"/>
        <ProgressBar Name="prb_state" HorizontalAlignment="Left" Height="19" Margin="10,595,0,0" VerticalAlignment="Top" Width="1267" Visibility="Hidden" Minimum="0" Maximum="1000"/>




    </Grid>
</Window>
